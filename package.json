{
  "name": "gentext-compress",
  "version": "1.0.0",
  "description": "Portable Python/Electron application for message compression and decompression",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-python": "build-python.bat",
    "dist-win-x64": "electron-builder --win --x64",
    "dist": "npm run dist-win-x64",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "vlf",
    "compression",
    "brotli",
    "base32",
    "electron",
    "portable"
  ],
  "author": "Torin Turner",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.gentext.compress",
    "productName": "GENTEXT Compress",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "settings.js",
      "renderer/**/*",
      "python-dist/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "python-dist/**/*"
    ],
    "extraResources": [
      {
        "from": "python-dist/vlf_compress_core",
        "to": "python"
      }
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker",
      "signingHashAlgorithms": ["sha256"],
      "icon": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "differentialPackage": false,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "installerIcon": null,
      "uninstallerIcon": null,
      "license": null,
      "warningsAsErrors": false,
      "unicode": true,
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    },
    "linux": {
      "target": {
        "target": "AppImage",
        "arch": ["x64"]
      },
      "category": "Utility",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
